{
  "extends": ["stylelint-config-standard"],
  "plugins": ["stylelint-prettier"],
  "rules": {
    "prettier/prettier": false,
    "indentation": 1,
    "value-list-comma-newline-after": "always",
    "order/order": [
      ["custom-properties", "declarations"],
      {
        "disableFix": true
      }
    ]
  }
}
